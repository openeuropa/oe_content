{
    "name": "openeuropa/oe_content",
    "description": "OpenEuropa Drupal module that contains the EC corporate entity types.",
    "type": "drupal-module",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "drupal/address": "~1.7",
        "drupal/core": "^8.7",
        "drupal/entity_reference_revisions": "~1.3",
        "drupal/field_group": "^3.0.0-rc1",
        "drupal/inline_entity_form": "~1.0-rc2",
        "drupal/linkit": "~5.0-beta8",
        "drupal/maxlength": "~1.0@beta",
        "drupal/typed_link": "~1.0",
        "easyrdf/easyrdf": "0.10.0-alpha.1 as 0.9.1",
        "openeuropa/rdf_skos": "~0.3",
        "openeuropa/oe_media": "^1.0@beta",
        "php": "^7.1"
    },
    "require-dev": {
        "composer/installers": "~1.5",
        "drupal-composer/drupal-scaffold": "~2.5.2",
        "drupal/config_devel": "~1.2",
        "drupal/entity_embed": "~1.0",
        "drupal/drupal-extension": "~4.0",
        "drush/drush": "~9.0",
        "nikic/php-parser": "^3.1.5",
        "openeuropa/behat-transformation-context" : "~0.1",
        "openeuropa/code-review": "~1.0@beta",
        "openeuropa/oe_multilingual": "^1.1.1",
        "openeuropa/drupal-core-require-dev": "^8.7",
        "openeuropa/task-runner": "~1.0@beta",
        "phpunit/phpunit": "~6.0",
        "symfony/dom-crawler": "~3.0",
        "drupaltest/behat-traits": "dev-8.x-1.x"
    },
    "autoload": {
        "psr-4": {
            "Drupal\\oe_content\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\oe_content\\": "./tests/",
            "Drupal\\Tests\\oe_media\\": "./build/modules/contrib/oe_media/tests/"
        }
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-install-cmd": "./vendor/bin/run drupal:site-setup",
        "post-update-cmd": "./vendor/bin/run drupal:site-setup"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "installer-paths": {
            "build/core": ["type:drupal-core"],
            "build/profiles/contrib/{$name}": ["type:drupal-profile"],
            "build/modules/contrib/{$name}": ["type:drupal-module"],
            "build/themes/contrib/{$name}": ["type:drupal-theme"]
        },
        "patches": {
            "drupal/field_group": {
                "https://www.drupal.org/project/field_group/issues/2787179": "https://www.drupal.org/files/issues/2019-08-22/2787179-highlight-html5-validation-40.patch",
                "https://www.drupal.org/project/field_group/issues/3072732": "https://www.drupal.org/files/issues/2019-08-06/3072732-6.patch"
            },
            "drupal/inline_entity_form": {
                "https://www.drupal.org/project/inline_entity_form/issues/2367235": "https://www.drupal.org/files/issues/2019-10-07/inline_entity_form-2367235-131.patch"
            },
            "drupal/typed_link": {
                "https://www.drupal.org/project/typed_link/issues/3085826": "https://www.drupal.org/files/issues/2019-10-04/typed_link-3085826-2.patch",
                "https://www.drupal.org/project/typed_link/issues/3085817": "https://www.drupal.org/files/issues/2019-10-07/typed_link-3085817-3.patch"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.1.9"
        }
    }
}
